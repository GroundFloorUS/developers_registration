<%= form_for(User.new, url: create_account_path, :method => :post) do |f| %>
	<fieldset>
    <div class="infield-label">
      <label for="input-name">Your Name</label>
			<%= f.text_field :name, class: "required input-block-level" %>
    </div>
    <div class="infield-label">
      <label for="input-email">Email address</label>
			<%= f.email_field :email, class: "required input-block-level" %>
    </div>
    <div class="infield-label">
      <label for="input-password">Password</label>
			<%= f.password_field :password, class: "required input-block-level" %>
    </div>
    <button type="submit" class="btn btn-primary btn-large btn-block">Continue&nbsp;&nbsp;<i class="icon-chevron-sign-right"></i></button>
  </fieldset>
<% end %>
<% unless local_assigns.has_key? :user %>
	<div class="or">
	  <p>or join using your social account:</p>
	  <a href="/auth/facebook" class="btn"><i class="icon-facebook"></i>&nbsp;&nbsp;Facebook</a>
	  <a href="/auth/twitter" class="btn"><i class="icon-twitter"></i>&nbsp;&nbsp;Twitter</a>
	  <a href="/auth/linkedin" class="btn"><i class="icon-linkedin"></i>&nbsp;&nbsp;LinkedIn</a>
	</div>
<% end %>
